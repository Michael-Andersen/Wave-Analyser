<Application x:Class="Wave_Analyser.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Wave_Analyser"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="backgroundBrush" Color="#ddd"/>
        <SolidColorBrush x:Key="menuBackgroundBrush" Color="#eee"/>
        <SolidColorBrush x:Key="waveformPrimaryBrush" Color="#4287f5"/>
        <SolidColorBrush x:Key="waveformSecondaryBrush" Color="#70a5fa"/>
        <SolidColorBrush x:Key="timeDomainBackgroundBrush" Color="#edf4ff"/>
        <SolidColorBrush x:Key="freqDomainBarBrush" Color="#348f18"/>
        <SolidColorBrush x:Key="freqDomainBackgroundBrush" Color="#fcfcfc"/>
    </Application.Resources>
</Application>
