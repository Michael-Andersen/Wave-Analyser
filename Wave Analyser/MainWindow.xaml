<Window x:Class="Wave_Analyser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wave_Analyser"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Background="#eee">
            <MenuItem Header="File"/>
        </Menu>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <StackPanel x:Name="waveformPanel" Grid.Row="1">

            </StackPanel>
        </ScrollViewer>

        <GridSplitter VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="5" Grid.Row="2" Background="#eee"/>
        <local:FrequencyViewer x:Name="frequencyViewer" Grid.Row="3">

        </local:FrequencyViewer>
    </Grid>
</Window>
