<UserControl x:Class="Wave_Analyser.WaveformViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wave_Analyser"
             mc:Ignorable="d" 
             d:DesignWidth="1000" Height="150"
             Focusable="True"
             Background="Transparent">
    <Grid>
        <Canvas  x:Name="background" Height="100" Background="#EEE" ClipToBounds="True"/>
        <ScrollViewer x:Name="viewer" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto">
            <Grid>
                <Canvas x:Name="timeDomainGraph" HorizontalAlignment="Left" Height="100" Background="Transparent" ClipToBounds="True"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
